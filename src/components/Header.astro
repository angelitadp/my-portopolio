<header class="fixed w-full z-50 bg-white/80 backdrop-blur-md shadow-sm">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-4">
      <div class="text-2xl font-bold bg-gradient-to-r from-primary-600 to-secondary-600 bg-clip-text text-transparent">
        Angelita Dumaria Panjaitan
      </div>
      <nav class="hidden md:block">
        <ul class="flex space-x-8">
          {['About', 'Skills', 'Projects', 'Contact'].map((item) => (
            <li>
              <a
                href={`#${item.toLowerCase()}`}
                class="text-gray-600 hover:text-primary-600 transition-colors duration-300 text-sm uppercase tracking-wider font-medium"
              >
                {item}
              </a>
            </li>
          ))}
        </ul>
      </nav>
      <button class="md:hidden text-gray-600 hover:text-primary-600">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
</header>
